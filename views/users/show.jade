extends ../layout.jade

block title
  title= title

block content
  div
    h2= user.username
    p User ID: #{user._id}
    
    if session.user == user._id
      div(class='field')
        a(class='button', href='/users/#{user._id}/edit') Edit
      div(class='field')
        form(onsubmit='return confirm("Are you sure you want to delete this account?")', action='/users/#{user._id}', method='post', enctype='application/x-www-form-urlencoded')
          input(type='hidden', value='delete', name='_method')
          input(class='button', type='submit', value='Delete')
